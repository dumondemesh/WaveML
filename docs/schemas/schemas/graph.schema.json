{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/waveml/graph.schema.json",
  "title": "WaveML Graph",
  "type": "object",
  "required": [
    "nodes",
    "edges"
  ],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "op"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "op": {
            "type": "string",
            "description": "операция из Σ = {T,D,W,A,C,Φ,Align}"
          },
          "attrs": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "label": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "meta": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
