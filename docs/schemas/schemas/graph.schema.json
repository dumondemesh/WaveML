{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/graph.schema.json",
  "title": "WaveML Graph (STRICT-NF input)",
  "schema_semver": "1.0.0",
  "type": "object",
  "required": [
    "op"
  ],
  "properties": {
    "op": {
      "type": "string",
      "const": "W"
    },
    "n_fft": {
      "type": "integer",
      "minimum": 1
    },
    "hop": {
      "type": "integer",
      "minimum": 1
    },
    "window": {
      "type": "string"
    },
    "center": {
      "type": "boolean"
    },
    "pad_mode": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "amp",
        "mag",
        "complex",
        "phase",
        "pow"
      ]
    }
  },
  "additionalProperties": true
}